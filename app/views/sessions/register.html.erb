<div class="login-content">
    <div class="login-logo">
        <a href="index.html">
            <img class="align-content" src="https://www.agileinfoways.com/wp-content/uploads/2018/10/brand-logo-4.png" alt="">
        </a>
    </div>    
    <div class="login-form">
        <%= form_tag user_register_sessions_path do |form| %>
            <div class="form-group">
                <label>First Name</label>
                <%= text_field_tag :first_name,nil, class:"form-control", placeholder:"First Name", required:true %>
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <%= text_field_tag :last_name,nil, class:"form-control", placeholder:"Last Name", required:true %>
            </div>
            <div class="form-group">
                <label>Email</label>
                <%= text_field_tag :email,nil, class:"form-control", placeholder:"Email Address", required:true %>
            </div>
            <div class="form-group">
                <label>Password</label>
                <%= password_field_tag :password, nil, class: "form-control", placeholder: "******" %>                
            </div>
            <!-- <div class="form-group">
                <label>Confirm Password</label>
                <%= password_field_tag :password_confirmation, nil, class: "form-control", placeholder: "******" %>
            </div>
            <div class="checkbox">                            
                <label class="pull-right">
                    <a href="#">Forgotten Password?</a>
                </label>
            </div> -->
            <%= submit_tag 'Register', class:"btn btn-success btn-flat m-b-30 m-t-30" %>                        
            <!-- <div class="social-login-content">
                <div class="social-button">
                    <button type="button" class="btn social facebook btn-flat btn-addon mb-3"><i class="ti-facebook"></i>Sign in with facebook</button>
                    <button type="button" class="btn social twitter btn-flat btn-addon mt-2"><i class="ti-twitter"></i>Sign in with twitter</button>
                </div>
            </div> -->
            <div class="register-link m-t-15 text-center">
                <p>Already have account ? <%= link_to "Sign In Here", login_path %></p>
            </div>
        <% end %>
    </div>
</div>