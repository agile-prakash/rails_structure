<div class="login-content">
    <div class="login-logo">
        <a href="index.html">
            <img class="align-content" src="images/logo.png" alt="">
        </a>
    </div>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2>
            <%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:
        </h2>
        <ul>
            <% user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
        </ul>
      </div>
    <% end %>
    <div class="login-form">
        <%= form_tag users_path do |form| %>
            <div class="form-group">
                <label>First Name</label>
                <%= form.text_field :first_name, class: "form-control", placeholder:"First Name", required:true %>
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <%= form.text_field :last_name, class: "form-control", placeholder:"Last Name", required:true %>
            </div>
            <div class="form-group">
                <label>Email</label>
                <%= form.text_field :email, class: "form-control", placeholder:"Email Address" %>
            </div>
            <div class="form-group">
                <label>Password</label>
                <%= form.password_field :password, class:"form-control", placeholder:"Password" %>
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                <%= form.password_field :password_confirmation, class:"form-control", placeholder:"Confirm Password" %>
            </div>
            <div class="checkbox">                            
                <label class="pull-right">
                    <a href="#">Forgotten Password?</a>
                </label>
            </div>
            <%= submit_tag 'Login', class:"btn btn-success btn-flat m-b-30 m-t-30" %>                        
            <div class="social-login-content">
                <div class="social-button">
                    <button type="button" class="btn social facebook btn-flat btn-addon mb-3"><i class="ti-facebook"></i>Sign in with facebook</button>
                    <button type="button" class="btn social twitter btn-flat btn-addon mt-2"><i class="ti-twitter"></i>Sign in with twitter</button>
                </div>
            </div>
            <div class="register-link m-t-15 text-center">
                <p>Already have account ? <%= link_to "Sign In Here", login_path %></p>
            </div>
        <% end %>
    </div>
</div>