<div class="animated fadeIn">
    <div class="row ">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <strong>Create New</strong> User
                </div>
                <%= form_with(model: user, local: true) do |form| %>
                    <div class="card-body card-block">
                        <div class="has-success form-group">
                            <label for="inputIsValid" class=" form-control-label">First Name</label>
                            <%= form.text_field :first_name, class: "form-control", placeholder:"First Name", required:true %>
                        </div>
                        <div class="has-warning form-group">
                            <label for="inputIsInvalid" class=" form-control-label">Last Name</label>
                            <%= form.text_field :last_name, class: "form-control", placeholder:"Last Name", required:true %>
                        </div>
                        <div class="has-warning form-group">
                            <label for="inputIsInvalid" class=" form-control-label">Email</label>
                            <%= form.text_field :email, class: "form-control", placeholder:"Email Address" %>
                        </div>
                        <div class="has-success form-group">
                            <label for="inputIsValid" class=" form-control-label">Password</label>
                            <%= form.password_field :password, class:"form-control", placeholder:"Password" %>
                        </div>
                        <div class="has-warning form-group">
                            <label for="inputIsInvalid" class=" form-control-label">Confirm Password</label>
                            <%= form.password_field :password_confirmation, class:"form-control", placeholder:"Confirm Password" %>
                        </div>
                        <div class="form-actions form-group">
                            <%= form.submit :class => 'btn btn-primary' %> 
                        </div>
                        
                    </div>
                <% end %>
            </div>
        </div>  
    </div>
</div>