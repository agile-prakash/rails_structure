<div class="animated fadeIn">
    <div class="row">
        <div class="col-md-12">
          <div class="card">
              <div class="card-header">
                  <i class="fa fa-user"></i><strong class="card-title pl-2">Profile Card</strong>
              </div>
              <div class="card-body">
                  <div class="mx-auto d-block">
                      <img class="rounded-circle mx-auto d-block" src="<%= root_url %>/images/admin.jpg" alt="Card image cap">
                      <h5 class="text-sm-center mt-2 mb-1"><%= current_user.first_name %>  <%= current_user.last_name %></h5>
                      <div class="location text-sm-center"><i class="fa fa-envelope"></i> <%= current_user.email %></div>
                  </div>
                  <hr>
                  <div class="card-text text-sm-center">
                      <a href="#"><i class="fa fa-facebook pr-1"></i></a>
                      <a href="#"><i class="fa fa-twitter pr-1"></i></a>
                      <a href="#"><i class="fa fa-linkedin pr-1"></i></a>
                      <a href="#"><i class="fa fa-pinterest pr-1"></i></a>
                  </div>
              </div>
          </div>
      </div>
    </div>
</div>