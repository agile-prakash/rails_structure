		                </a>
		                <div class="media-body">
		                    <h2 class="text-white display-6"><%= @user.first_name %>  <%= @user.last_name %></h2>
		                    <p class="text-light">Web Developer</p>
		                </div>
		            </div>
		        </div>
		        <div class="weather-category twt-category">
		            <ul>
		                <li class="active">
		                    <h5>750</h5>
		                    Tweets
		                </li>
		                <li>
		                    <h5>865</h5>
		                    Following
		                </li>
		                <li>
		                    <h5>3645</h5>
		                    Followers
		                </li>
		            </ul>
		        </div>		        
		        <footer class="twt-footer">		            		            
		            <span class="pull-left"><%= @user.email %></span>		            
		            <span class="pull-right">32 </span>
		        </footer>
		    </section>
		</div>	
	</div>
</div>
