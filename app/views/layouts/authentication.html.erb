<head>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>    
    <%= stylesheet_link_tag     "https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" %>    
    <%= stylesheet_link_tag     "https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800" %>    
    
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</head>
<body class="bg-dark" style="background-color: #74aeb7 !important;">
    <div class="sufee-login d-flex align-content-center flex-wrap">    	
        <div class="container">
        	<% flash.each do |key, value| %>
        		<div class="sufee-alert alert with-close alert-<%= key %> alert-dismissible fade show">
                    <span class="badge badge-pill badge-<%= key %>"><%= key %></span>
                    	<%= value %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
        	<% end %>
            <%= yield %>
        </div>
    </div>
    <%= javascript_include_tag 'https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js' %>
</body>
</html>
